<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".third_ui">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="#666666"
        android:id="@+id/thirdTxtWelcome"
        />
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:layout_centerVertical="true"-->

    <Button
        android:id="@+id/thirdBtnWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdTxtWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000"
        android:textColor="@color/design_default_color_on_primary"
        android:onClick="thirdSayHello"
        android:text="Say Hello" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say Hi"
        android:id="@+id/thirdBtnHi"
        android:layout_centerInParent="true"
        android:layout_below="@id/thirdBtnWelcome"
        android:layout_marginTop="10dp"

        />

</RelativeLayout>