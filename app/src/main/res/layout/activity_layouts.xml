<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layouts">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/layRel"
        android:layout_below="@+id/layLin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layTxt1"
            android:text="Monday"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layTxt2"
            android:text="Tuesday"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/layTxt1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layTxt3"
            android:text="Wednesday"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/layTxt2"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear Text"
            android:id="@+id/layLinTxt1"
            android:background="#eee"
            android:layout_weight="3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Linear Button"
            android:layout_weight="7"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's say Hello"
        android:layout_below="@+id/layRel"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/layTxtHello"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say Hello"
        android:id="@+id/layBtnHello"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layTxtHello"
        />

</RelativeLayout>